echo ты нашол 1ю магическую карту
cat <<'EOF'
         _______________
    ()==(              (@==()
         '______________'|
           |             |
           |             |
         __)_____________|
    ()==(               (@==()
         '--------------'

EOF
echo ты хочешь взять её, y/n ?
read otvet
if [ "$otvet" = y ]; then
    echo добавь карту в I
else
    echo эх, дурак ты дурак, такую карту не взял
fi

